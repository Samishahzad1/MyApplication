<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".casee"
    android:background="@drawable/download"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Case Details"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/casestatus"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />


    <EditText
        android:id="@+id/casestatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="15dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="Case Status"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/clientname_sch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="Client Name"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/casenumber_sch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clientname_sch"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="Case Number"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/casename_sch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/casenumber_sch"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"

        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="Case Name"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/casedate_sch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/casename_sch"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="Case Date"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/remarks_sch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/casedate_sch"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="Remarks"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    />

    <Button
        android:id="@+id/button_login_sch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remarks_sch"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_show_sch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remarks_sch"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="144dp"
        android:text="show data"
        android:textColor="@color/white"
        android:textSize="20dp" />
    <Button
        android:id="@+id/button_edit_sch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remarks_sch"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="144dp"
        android:text="show data"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="gone"/>


</RelativeLayout>